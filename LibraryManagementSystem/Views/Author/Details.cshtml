@model List<AuthorDetailViewModel>

<div>

    @foreach (var item in Model)
    {
        <div class="card mt-5" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title mb-3"> @item.FirstName @item.LastName </h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">Doğum Tarihi=@item.DateOfBirth</h6>
                <a href="#" class="card-link">Yazarın kitaplarını görmek için tıklayınız.</a>

            </div>
        </div>
    }


</div>