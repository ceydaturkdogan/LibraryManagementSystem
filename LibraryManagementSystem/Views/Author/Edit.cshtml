@model AuthorEditViewModel
<h3 class="ms-3 text-center mt-5">
    Yazar Düzenleme Sayfası
</h3>


<form asp-controller="Author" asp-action="Edit" method="post">

    <input asp-for="Id" />

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Yazar Adı</label>
        <input asp-for="FirstName" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Yazar adı">
        <span asp-validation-for="FirstName"></span>
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Yazar Soyadı Giriniz</label>
        <input asp-for="LastName" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Yazar Soyadı">
        <span asp-validation-for="LastName"></span>
    </div>


    <button type="submit" class="btn btn-success mt-2">Kaydet</button>

</form>