@model List<BookListViewModel>


<h3 class=" mt-5 mb-3 text-center">
    Kitap Listeleme Sayfası
</h3>

<div class="row ">

    @foreach (var item in Model)
    {
        <div class="card mb-2 ms-5" style="width: 18rem;">
            <img src="https://as1.ftcdn.net/v2/jpg/00/53/73/42/1000_F_53734293_rs3bkrl9n1EJZBj2CdogkmeF6W5aOhy5.jpg" class="card-img-top" alt="BookIcons">
            <div class="card-body">
                <h5 class="card-title mt-4">@item.Title</h5>
                <div class="row">
                    <a asp-controller="book" asp-action="detail" class="btn btn-sm btn-primary mt-2">Detaylarını Görmek İçin Tıklayınız</a>
                    <a asp-controller="book" asp-action="edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mt-2">Kitabı Düzenlemek İçin Tıklayınız</a>
                    <a asp-controller="book" asp-action="delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger mt-2">Kitabı Silmek İçin Tıklayınız</a>


                </div>
            </div>
        </div>
    }
</div>
<div class="row ">
    <a asp-controller="Book" asp-action="Create" class="btn btn-primary m-5"> Yeni Kitap Ekle</a>

</div>

